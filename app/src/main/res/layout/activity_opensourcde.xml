<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".opensourcde">

    <RelativeLayout
        android:id="@+id/Relativelayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#0D070707"
        android:elevation="10dp">

        <Button
            android:id="@+id/backbutton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/back"
            android:padding="30dp" />

        <TextView

            android:layout_width="300dp"
            android:layout_height="match_parent"

            android:layout_alignParentEnd="true"
            android:layout_marginEnd="70dp"

            android:layout_toEndOf="@+id/backbutton"
            android:fontFamily="@font/font3"
            android:gravity="center_horizontal|center|start"
            android:text=" Open Source"
            android:textSize="24dp" />


    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"

        android:alignmentMode="alignBounds"
        android:columnCount="1"

        android:rowCount="10"


        >

        <androidx.cardview.widget.CardView
            android:id="@+id/opensource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="90dp"
            android:elevation="4sp"
            app:cardBackgroundColor="#FFEB3B"
            app:cardCornerRadius="9dp"


            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:fontFamily="@font/font3"
                android:padding="15dp"
                android:text="Android Image Cropper"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/font3"

                android:padding="15dp"
                android:text="@string/opensource"
                android:textAlignment="center"
                android:textColor="#000000" />


        </androidx.cardview.widget.CardView>

    </GridLayout>

</RelativeLayout>