<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20sp">

    <LinearLayout
        android:id="@+id/gridanmation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">

        <GridLayout
            android:id="@+id/GridIntent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="11.5sp"
            android:layout_marginTop="1sp"
            android:layout_marginRight="11.5sp"
            android:alpha="1"

            android:columnCount="1"
            android:rowCount="3"
            tools:ignore="UselessParent">

            <androidx.cardview.widget.CardView

                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"

                app:cardCornerRadius="8sp"

                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/a1"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_gravity="center"
                    android:alpha="1"
                    android:background="@drawable/custom_layout"

                    android:gravity="center"
                    android:padding="13dp"
                    android:text="@string/app_name"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"


                    tools:ignore="SpUsage">

                </TextView>

            </androidx.cardview.widget.CardView>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_gravity="bottom"
                android:layout_margin="4sp"
                android:layout_marginTop="-3dp"
                android:background="@drawable/custom_layout"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/share1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="6.5dp"
                    android:src="@drawable/share1"
                    android:text="Share"

                    android:textAlignment="center"
                    android:textColor="#D4B800"

                    android:textSize="18dp"
                    tools:ignore="SpUsage">

                </ImageView>

                <ImageView

                    android:id="@+id/copy1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:padding="6.5dp"
                    android:src="@drawable/copy1"
                    android:text="Copy"

                    android:textAlignment="center"
                    android:textColor="@color/teal_200"

                    android:textSize="17dp" />

                <ImageView

                    android:id="@+id/whatsapp1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"

                    android:padding="6.5dp"
                    android:src="@drawable/whatsapp"
                    android:text="Copy"

                    android:textAlignment="center"
                    android:textColor="@color/teal_200"

                    android:textSize="17dp" />

                <ImageView

                    android:id="@+id/c1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"

                    android:padding="6.5dp"
                    android:src="@drawable/edittool"
                    android:text="Copy"

                    android:textAlignment="center"
                    android:textColor="@color/teal_200"

                    android:textSize="17dp" />


            </LinearLayout>


        </GridLayout>


    </LinearLayout>


</ScrollView>