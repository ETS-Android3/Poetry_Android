<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/allinoneperent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    app:flow_firstVerticalStyle="spread_inside"
    app:flow_horizontalGap="9dp"
    app:flow_lastHorizontalStyle="spread"
    app:flow_wrapMode="aligned"
    tools:context=".Allinone">

    <RelativeLayout
        android:id="@+id/Relativelayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#0D070707"
        android:elevation="10dp">

        <Button
            android:id="@+id/backbutton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/back"
            android:padding="30dp" />

        <TextView

            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="70dp"
            android:layout_toEndOf="@+id/backbutton"

            android:fontFamily="@font/font3"
            android:gravity="center_horizontal|center|start"
            android:text=" Design Image"
            android:textColor="#FFFFFF"
            android:textSize="24dp" />


    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/rr1"

        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:background="@drawable/gardiant">


        <ImageView
            android:id="@+id/imagegallary"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="-30dp"
            android:layout_marginBottom="-30dp"
            android:importantForAutofill="auto"


            />


        <TextView
            android:id="@+id/allinone"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fontFamily="@font/hindi4"

            android:gravity="center"
            android:padding="26sp"

            android:text="@string/app_name"

            android:textColor="@color/white"
            android:textSize="20sp"


            tools:ignore="RtlCompat" />


    </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity">

        <FrameLayout
            android:id="@+id/sheet"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:background="@drawable/bottomsheet"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-5dp"
                app:lottie_autoPlay="true"
                app:lottie_colorFilter="@color/white"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/upwards"

                app:lottie_speed="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="40dp"
                android:padding="10dp"
                android:fontFamily="@font/font3"
                android:text="Text Size"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="205dp"
                android:layout_marginTop="40dp"
                android:padding="10dp"
                android:fontFamily="@font/font3"
                android:text="Image Opacity"
                android:textSize="12dp" />

            <SeekBar
                android:id="@+id/seekbar2"
                android:layout_width="150dp"

                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="30dp"

                app:layout_constraintEnd_toStartOf="@+id/seekbar2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar

                android:id="@+id/seekbar"
                android:layout_width="150dp"
                android:layout_height="20dp"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/flow"
                app:layout_constraintStart_toStartOf="@+id/flow"
                app:layout_constraintTop_toTopOf="parent" />
        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rr1"
        android:layout_marginTop="-90dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1A30AFE3"
            android:foregroundGravity="bottom">


            <ImageView
                android:id="@+id/m"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:src="@drawable/backcolore" />

            <ImageView
                android:id="@+id/cangeimage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/changeimage" />

            <ImageView
                android:id="@+id/gallary"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/gallery" />


            <ImageView

                android:id="@+id/font"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fontstyle" />

            <ImageView

                android:id="@+id/likhe"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/editshayari" />

            <ImageView
                android:id="@+id/colore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fontcolore" />

            <ImageView
                android:id="@+id/aa"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/textalinecenter" />


            <ImageView
                android:id="@+id/Download"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/download" />


            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                app:constraint_referenced_ids="m,cangeimage,gallary,likhe,font,aa,colore,Download"
                app:flow_firstHorizontalStyle="spread"


                app:flow_wrapMode="none"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="10dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</RelativeLayout>